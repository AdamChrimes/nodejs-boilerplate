{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "Nodejs boilerplate with express, nunjucks, rollupjs and browsersync.",
  "main": "app.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js && npm run build:assets",
    "build:css": "node-sass --output-style compressed app/styles/main.scss public/css/main.min.css",
    "build:js": "rollup -c",
    "build:assets": "copyfiles --flat app/assets/* public/assets/",
    "clean": "touch public/tmp.txt && rm -rf public/*",
    "lint": "npm run lint:js",
    "lint:js": "eslint app/scripts/**",
    "nuke": "npm run clean && rm -rf node_modules/",
    "postinstall": "npm run build",
    "start": "node app",
    "test": "mocha --require @babel/register test/**/*.spec.js",
    "watch": "concurrently \"npm run watch:scss\" \"npm run watch:js\" \"npm start\"",
    "watch:scss": "npm run build:css -- -w",
    "watch:js": "npm run build:js -- -w"
  },
  "author": "https://github.com/AdamChrimes",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdamChrimes/nodejs-boilerplate.git"
  },
  "license": "MIT",
  "dependencies": {
    "copyfiles": "^2.1.0",
    "express": "^4.16.4",
    "node-sass": "^4.11.0",
    "nunjucks": "^3.1.4",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "browser-sync": "^2.26.3",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "rollup": "^1.1.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-uglify": "^6.0.1"
  }
}
